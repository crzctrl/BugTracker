@model BugTracker.Models.ChangePasswordViewModel
@{
    ViewBag.Title = "Change Password";
    var demo = User.IsInRole("DemoAdmin") || User.IsInRole("DemoProject_Manager") || User.IsInRole("DemoDeveloper") || User.IsInRole("DemoSubmitter");
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href=@Url.Action("Dashboard", "Home")>
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</div>
<br/>
<div class="row">
    <div class="col-md-offset-2 col-md-8">
        <div class="panel panel-primary" id="minraise">
            <div class="panel-heading">Change your password</div>
            <div class="panel-body">
                <div class="col-md-12">
                    @using (Html.BeginForm("ChangePassword", "Manage", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10">
                                    <h4>Current Password</h4>
                                    @if (demo)
                                    {
                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control", name = "disabled", disabled = "disabled" })

                                    }
                                    else
                                    {
                                        @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10">
                                    <h4>New Password</h4>
                                    @if (demo)
                                    {
                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control", name = "disabled", disabled = "disabled" })
                                    }
                                    else
                                    {
                                        @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-1 col-md-10">
                                    <h4>Confirm Password</h4>
                                    @if (demo)
                                    {
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", name = "disabled", disabled = "disabled" })
                                    }
                                    else
                                    {
                                        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
                                    }
                                </div>
                            </div>
                        </div>
                        <br/>
                        <div class="row">
                            <div class="form-group">
                                <div class="col-md-offset-2 col-md-8">
                                    <button type="submit" class="btn btn-primary bigbtn">Confirm</button>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}