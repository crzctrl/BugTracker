@model IEnumerable<BugTracker.Models.TicketNotification>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-striped table-bordered">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Recipient.FirstName)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.Ticket.SubmitterId)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.NotificationBody)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.isRead)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Recipient.Email)
        </td>
        @*<td>
            @Html.DisplayFor(modelItem => item.Ticket.Submitter.Email)
        </td>*@
        <td>
            @Html.DisplayFor(modelItem => item.NotificationBody)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.isRead)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
