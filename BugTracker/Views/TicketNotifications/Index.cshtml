@model IEnumerable<BugTracker.Models.TicketNotification>

@{
    ViewBag.Title = "Index";
}

<div class="row">
    <ol class="breadcrumb">
        <li>
            <a href=@Url.Action("Dashboard", "Home")>
                <em class="fa fa-home"></em>
            </a>
        </li>
        <li class="active">Ticket Notifications</li>
    </ol>
</div>
<br />
<div class="table-responsive">
    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Created")
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.Ticket.SubmitterId)
                    </th>*@
                <th>
                    @Html.DisplayName("Notification")
                </th>
                @*<th>
                        @Html.DisplayName("Read")
                    </th>*@
                @*<th></th>*@
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.OrderByDescending(m => m.Created))
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Created)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.Ticket.Submitter.Email)
                        </td>*@
                    <td>
                        @Html.DisplayFor(modelItem => item.NotificationBody)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.isRead)
                        </td>*@
                    @*<td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                            @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </td>*@
                </tr>
            }
        </tbody>
    </table>
</div>